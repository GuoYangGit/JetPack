<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.text.TextUtils"/>

        <variable
                name="showTag"
                type="Boolean"/>

        <variable
                name="bean"
                type="com.yangguo.jetpack.mvvm.vo.ArterialBean.Data"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_marginHorizontal="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:paddingVertical="12dp">

            <TextView
                    android:id="@+id/item_project_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/content_color"
                    android:text="@{TextUtils.isEmpty(bean.author)?bean.shareUser:bean.author}"
                    tools:text="有何高见"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/item_project_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:paddingHorizontal="3dp"
                    android:text="@string/top_text"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/tag_size"
                    bind:isVisible="@{bean.type==1&amp;&amp;showTag}"
                    app:bl_stroke_color="@android:color/holo_red_light"
                    app:bl_stroke_width="1dp"
                    app:bl_corners_radius="3dp"
                    app:layout_constraintStart_toEndOf="@id/item_project_author"
                    app:layout_constraintTop_toTopOf="@id/item_project_author"
                    app:layout_constraintBottom_toBottomOf="@id/item_project_author"/>

            <TextView
                    android:id="@+id/item_project_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:paddingHorizontal="3dp"
                    android:text="@string/new_text"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/tag_size"
                    bind:isVisible="@{bean.fresh&amp;&amp;showTag}"
                    app:bl_corners_radius="3dp"
                    app:bl_stroke_color="@android:color/holo_red_light"
                    app:bl_stroke_width="1dp"
                    app:layout_constraintStart_toEndOf="@id/item_project_top"
                    app:layout_constraintTop_toTopOf="@id/item_project_author"
                    app:layout_constraintBottom_toBottomOf="@id/item_project_author"/>

            <TextView
                    android:id="@+id/item_project_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginLeft="13dp"
                    android:paddingHorizontal="3dp"
                    android:text="@{bean.tags[0].name}"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/tag_size"
                    bind:isVisible="@{bean.tags.size()>0&amp;&amp;showTag}"
                    app:bl_corners_radius="3dp"
                    app:bl_stroke_color="@android:color/holo_green_dark"
                    app:bl_stroke_width="1dp"
                    app:layout_constraintStart_toEndOf="@id/item_project_new"
                    app:layout_constraintTop_toTopOf="@id/item_project_author"
                    app:layout_constraintBottom_toBottomOf="@id/item_project_author"/>

            <TextView
                    android:id="@+id/item_project_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/hilt_color"
                    android:text="@{bean.niceDate}"
                    tools:text="1小时前"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                    android:id="@+id/item_project_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    bind:loadUrl="@{bean.envelopePic}"
                    bind:isVisible="@{!TextUtils.isEmpty(bean.envelopePic)}"
                    app:layout_constraintTop_toTopOf="@id/item_project_title"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:visibility="gone"/>

            <TextView
                    android:id="@+id/item_project_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/title_color"
                    android:textStyle="bold"
                    bind:html="@{bean.title}"
                    tools:text="这是一个菜的扣jio的人写的项目"
                    app:layout_goneMarginStart="0dp"
                    app:layout_constraintTop_toBottomOf="@id/item_project_author"
                    app:layout_constraintStart_toEndOf="@id/item_project_iv"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:id="@+id/item_project_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="3"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/content_color"
                    bind:html="@{bean.desc}"
                    bind:isVisible="@{!TextUtils.isEmpty(bean.desc)}"
                    tools:visibility="gone"
                    tools:text="一个Jetpack结合MVVM的快速开发框架，基于MVVM模式集成谷歌官方推荐的JetPack组件库：LiveData、ViewModel、Lifecycle组件 使用Kotlin语言，添加大量拓展函数，简化代码 加入Retrofit网络请求,协程，帮你简化各种操作，让你快速开发项目"
                    app:layout_goneMarginStart="0dp"
                    app:layout_constraintTop_toBottomOf="@id/item_project_title"
                    app:layout_constraintStart_toEndOf="@id/item_project_iv"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="item_project_iv,item_project_content"/>

            <TextView
                    android:id="@+id/item_project_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_size"
                    android:textColor="@color/hilt_color"
                    android:layout_marginTop="8dp"
                    bind:html="@{bean.superChapterName+'·'+bean.chapterName}"
                    tools:text="分类·项目"
                    app:layout_constraintTop_toBottomOf="@id/barrier"
                    app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>