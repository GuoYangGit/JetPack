<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <View
            android:id="@+id/external_shape_bg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <View
            android:id="@+id/inside_shape_bg"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="@id/external_shape_bg"
            app:layout_constraintEnd_toEndOf="@id/external_shape_bg"
            app:layout_constraintTop_toTopOf="@id/external_shape_bg"
            app:layout_constraintBottom_toBottomOf="@id/external_shape_bg"/>

    <TextView
            android:id="@+id/down_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/inside_shape_bg"
            app:layout_constraintEnd_toEndOf="@id/inside_shape_bg"
            app:layout_constraintTop_toTopOf="@id/inside_shape_bg"
            app:layout_constraintBottom_toBottomOf="@id/inside_shape_bg"
            tools:text="5"/>

    <ImageView
            android:id="@+id/pk_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/inside_shape_bg"
            app:layout_constraintEnd_toEndOf="@id/inside_shape_bg"
            app:layout_constraintTop_toTopOf="@id/inside_shape_bg"
            app:layout_constraintBottom_toBottomOf="@id/inside_shape_bg"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/left_layout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/external_shape_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/left_avatar_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:roundAsCircle="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/left_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toStartOf="@id/left_avatar_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/left_vs_tv"/>

        <TextView
                android:id="@+id/left_vs_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/our_side"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@id/left_name_tv"
                app:layout_constraintTop_toBottomOf="@id/left_name_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/right_layout"
            android:layout_width="128dp"
            android:layout_height="48dp"
            android:padding="4dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/external_shape_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/right_avatar_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:roundAsCircle="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/right_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                app:layout_constraintStart_toEndOf="@id/right_avatar_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/right_vs_tv"/>

        <TextView
                android:id="@+id/right_vs_tv"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/enemy"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/right_name_tv"
                app:layout_constraintTop_toBottomOf="@id/right_name_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>